{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "moduleDetection": "force",
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,

    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "outDir": "dist",
    "noEmit": true
  },
  "include": ["src"]
}
